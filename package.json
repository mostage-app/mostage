{
  "name": "mostage",
  "version": "1.5.19",
  "description": "Presentation framework based on markdown with HTML support and multi-format export capabilities.",
  "keywords": [
    "presentation",
    "markdown",
    "web-based",
    "slides",
    "presentation-slides",
    "presentation-framework",
    "presentation-generator",
    "markdown-presentation",
    "markdown-slides",
    "markdown-to-presentation",
    "markdown-to-slides",
    "markdown-to-pdf",
    "markdown-to-pptx",
    "markdown-to-png",
    "markdown-to-jpg",
    "markdown-to-html",
    "pptx"
  ],
  "author": "mo.js.org",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "homepage": "https://mo.js.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/mirmousaviii/mostage.git"
  },
  "bugs": {
    "url": "https://github.com/mirmousaviii/mostage/issues"
  },
  "main": "dist/core/index.cjs",
  "module": "dist/core/index.js",
  "types": "dist/core/types/index.d.ts",
  "bin": {
    "mostage": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/core/types/index.d.ts",
      "import": "./dist/core/index.js",
      "require": "./dist/core/index.cjs"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "require": "./dist/cli/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "npm run dev:basic & npm run dev:demo",
    "dev:basic": "VITE_ROOT=src/core/templates/basic vite --config vite.dev.config.ts --port 3001",
    "dev:demo": "VITE_ROOT=src/core/templates/demo vite --config vite.dev.config.ts --port 3002",
    "build": "npm run clean && npm run build:core && npm run build:cli",
    "build:core": "vite build --config vite.build.core.config.ts && npm run copy:templates",
    "build:cli": "vite build --config vite.build.cli.config.ts",
    "copy:templates": "cp -r src/core/templates dist/core",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext ts,tsx",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "clean": "rm -rf dist",
    "release:npm": "changeset publish --registry=https://registry.npmjs.org",
    "release:github": "changeset publish --registry=https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.9",
    "@types/node": "^24.3.0",
    "@types/prismjs": "^1.26.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.3",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^12.0.0",
    "marked": "^16.3.0",
    "prismjs": "^1.30.0",
    "puppeteer": "^23.0.0",
    "pptxgenjs": "^3.12.0",
    "sharp": "^0.33.0"
  }
}
